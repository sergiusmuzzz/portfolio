include ../mixins/sprite.jade
include ../mixins/icon.jade

doctype html
html(lang="en")

    - var SiteName = site.name
    - var Keywords = site.keywords
    - var Description = site.description
    - var ogImg = site.ogImg
    - var Viewport = 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no'

    block vars
        - var bodyClass = ''
        - var Title = site.name + ' - ' + site.title
        - var Url = site.url

    head

        block title
            title= Title

        block meta
            meta(charset="utf-8")
            meta(http-equiv="X-UA-Compatible", content="IE=edge")
            meta(name="description", content="#{Description}")
            meta(name="keywords", content="#{Keywords}")
            meta(name="viewport", content="#{Viewport}")
            meta(name="robots", content="index, follow")
            meta(property="og:site_name", content="#{SiteName}")
            meta(property="og:type", content="website")
            meta(property="og:url", content="#{Url}")
            meta(property="og:title", content="#{Title}")
            meta(property="og:image", content="#{ogImg}")
            meta(property="og:description", content="#{Description}")

        block metaLinks
            link(rel='shortcut icon', href='#{site.favicon}')
            link(rel='canonical', href='#{Url}')

        block robotLinks

        block css

            link( rel="stylesheet", type="text/css", href="http://nxcache.nexon.net/all/v1.5.2/css/all.css" )
            link( href='css/icon-fonts.css', rel='stylesheet' )

            // build:css(.tmp) css/app.css
            link(href='css/all.css', rel='stylesheet')
            // endbuild

        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js', type='text/javascript')

        script.
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function () {
                            (i[r].q = i[r].q || []).push(arguments)
                        }, i[r].l = 1 * new Date();
                a = s.createElement(o),
                        m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
            ga('create', 'UA-65835472-1', 'auto', {'allowLinker': true});
            ga('require', 'linker');
            ga('linker:autoLink', ['firstassault.com', 'firstassault.nexoneu.com', 'firstassaultgame.com']);
            ga('require', 'linkid', 'linkid.js');
            ga('send', 'pageview');



    body.part-1
