                    a.button.primary.play(href="#" data-ga="Play on Steam" data-i18n="[html]site.modal.play-on-steam") PLAY ON STEAM
                    a.button.primary.play(href="#" data-ga="Play on Launcher" data-i18n="[html]site.modal.play-on-nexon-launcher") PLAY ON NEXON LAUNCHER

        .popup.mobile-menu-popup
            a.close.f-icon-close(href="#" data-ga="Close Window")
